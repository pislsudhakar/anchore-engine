{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Standalone",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tests/functional/clients/scripts/standalone.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Engine:api",
      "type": "python",
      "request": "attach",
      "port": 5500,
      "host": "localhost",
      "subProcess": true,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/code/anchore-engine"
        }
      ]
    },
